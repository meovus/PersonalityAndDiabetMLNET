<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MEOVUS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EnneagramMLNet.styles.css" asp-append-version="true" />
</head>
<body class="bg-black">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="predict" asp-action="diabet">Diabet Hastalık Tespiti</a>
                <a class="navbar-brand text-white" asp-area="" asp-controller="predict" asp-action="personality">Kişilik Analizi</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function nextStep(step) {
            document.querySelectorAll('.form-step').forEach(el => el.classList.add('d-none'));
            document.getElementById(`step-${step}`).classList.remove('d-none');
        }

        function prevStep(step) {
            document.querySelectorAll('.form-step').forEach(el => el.classList.add('d-none'));
            document.getElementById(`step-${step}`).classList.remove('d-none');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
