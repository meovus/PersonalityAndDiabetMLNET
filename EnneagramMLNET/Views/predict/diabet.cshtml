
@model Patient

<div class="row">
    <!-- Form column -->
    <div class="col-md-6">
        @using (Html.BeginForm(actionName: "diabet", controllerName: "predict", FormMethod.Post))
        {
            <div id="step-1" class="form-step">
                <h3 class="text-white">Adım 1</h3>
                <div class="form-group mt-2">
                    <label asp-for="Pregnancies" class="col-md-2 control-label text-white"></label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(p => p.Pregnancies, "number", new { @class = "form-control bg-black text-white custom-textbox" })
                    </div>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="Glucose" class="col-md-2 control-label text-white"></label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(p => p.Glucose, "number", new { @class = "form-control bg-black text-white custom-textbox" })
                    </div>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="BloodPressure" class="col-md-2 control-label text-white"></label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(p => p.BloodPressure, "number", new { @class = "form-control bg-black text-white custom-textbox" })
                    </div>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="SkinThickness" class="col-md-2 control-label text-white"></label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(p => p.SkinThickness, "number", new { @class = "form-control bg-black text-white custom-textbox" })
                    </div>
                </div>

                <div class="text-end mt-3">
                    <button type="button" class="btn btn-primary" onclick="nextStep(2)">Sonraki</button>
                </div>
            </div>

            <div id="step-2" class="form-step d-none">
                <h3 class="text-white">Adım 2</h3>

                <div class="form-group mt-2">
                    <label asp-for="Insulin" class="col-md-2 control-label text-white"></label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(p => p.Insulin, "number", new { @class = "form-control bg-black text-white custom-textbox" })
                    </div>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="BMI" class="col-md-2 control-label text-white"></label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(p => p.BMI, "number", new { @class = "form-control bg-black text-white custom-textbox" })
                    </div>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="DiabetesPedigreeFunction" class="col-md-2 control-label text-white"></label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(p => p.DiabetesPedigreeFunction, "number", new { @class = "form-control bg-black text-white custom-textbox" })
                    </div>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="Age" class="col-md-2 control-label text-white"></label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(p => p.Age, "number", new { @class = "form-control bg-black text-white custom-textbox" })
                    </div>
                </div>
                
                <div class="text-end mt-3">
                    <button type="button" class="btn btn-secondary" onclick="prevStep(1)">Önceki</button>
                    <button type="submit" class="btn btn-primary">Analiz Et</button>
                </div>
            </div>

           
        }
    </div>

    <!-- Image column -->
    <div class="col-md-6 text-center">
        <img src="~/images/enneagram.jpg" class="img-fluid" alt="Enneagram Image" />

        <div class="form-group mt-5 prediction">
            <div class="col-md-8 ml-3">
                @Html.TextAreaFor(p => p.Prediction, 3, 200, new { @class = "form-control bg-black text-white", @disabled = "disabled", @placeholder="Test Sonuçları" })
            </div>
        </div>
    </div>
</div>